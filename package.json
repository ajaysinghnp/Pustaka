{
  "name": "pustaka",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/pustaka.cjs.js",
  "module": "./dist/pustaka.esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pustaka.esm.js",
      "require": "./dist/pustaka.cjs.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve examples",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:examples": "vite build examples",
    "test": "echo 'Tests will be added in next iteration'",
    "clean": "rm -rf dist dist-examples",
    "lint": "echo 'Linting will be added in next iteration'"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/pdfjs-dist": "^2.10.377",
    "rollup": "^3.29.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "peerDependencies": {
    "pdfjs-dist": "^5.4.149"
  },
  "peerDependenciesMeta": {
    "pdfjs-dist": {
      "optional": true
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
