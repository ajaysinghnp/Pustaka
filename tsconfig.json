{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["rollup.config.ts", "packages/core"],
  "exclude": ["node_modules", "dist"]
}
